<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DemTem</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
</head>
<body id="background">
    <nav class="navbar sticky-top navbar-expand-lg" ; style="background-color: #383838;">
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">
            <img src="https://d2.alternativeto.net/dist/icons/temtem_160574.png?width=64&height=64&mode=crop&upscale=false" width="45" height="45" class="d-inline-block align-top" alt="" loading="lazy" id="logoImage">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ViewTemtemSimple", "Home")">Temtems</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("ViewTemtemStats", "Home")">Stats</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Damage Calculator</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Team Builder</a>
                </li>
            </ul>
        </div>
    </nav>
    <script>
        $(document).ready(function () {
            $('.nav-item a').filter(function () { return this.href == location.href }).parent().addClass('active').siblings().removeClass('active');
        });
    </script>
    @RenderBody()
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<style>
    #background {
        background-color: #a9f5ee;
        height: 100%;
        margin: 0;
        font-family: Calibri;
    }
    #logoImage {
        border: 0px solid transparent;
        border-radius: 30px;
        border-color: #feb15f;
    }
    .active {
        text-decoration: underline #feb15f;
        font-weight: bold;
    }
    .navbar-brand {
        padding-top: 3px;
        padding-bottom: 3px;
    }
</style>